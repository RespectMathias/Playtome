name: dockercompose15418781089088235346
services:
  mysql-db:
    container_name: mysql-db
    environment:
      MYSQL_DATABASE: my_db
      MYSQL_ROOT_PASSWORD: root
    image: mysql:latest
    networks:
      default: null
    ports:
      - mode: ingress
        target: 3306
        published: "3307"
        protocol: tcp
    restart: unless-stopped
    volumes:
      - type: volume
        source: mysql_data
        target: /var/lib/mysql
        volume: {}
  playtome:
    build:
      context: D:\source\repos\Playtome
      dockerfile: Playtome/Dockerfile
    command:
      - sh
      - -c
      - sleep 10 && php artisan migrate --force && apache2-foreground
    container_name: Playtome
    depends_on:
      mysql-db:
        condition: service_started
        required: true
    environment:
      DB_CONNECTION: mysql
      DB_DATABASE: playtome
      DB_HOST: mysql-db
      DB_PASSWORD: root
      DB_PORT: "3306"
      DB_USERNAME: root
    image: playtome
    networks:
      default: null
    ports:
      - mode: ingress
        target: 80
        published: "8001"
        protocol: tcp
    restart: unless-stopped
    volumes:
      - type: bind
        source: D:\source\repos\Playtome\Playtome
        target: /var/www/html
        bind:
          create_host_path: true
networks:
  default:
    name: dockercompose15418781089088235346_default
volumes:
  mysql_data:
    name: dockercompose15418781089088235346_mysql_data